<div id="sliding-popup" class="sliding-popup-top clearfix" style="height: auto; width: 100%; top: 0px;">
  <div class="eu-cookie-compliance-banner eu-cookie-compliance-banner-info" style="overflow: auto">
    <div class="popup-content info eu-cookie-compliance-content">
      {{#if complianceText}}
      <div id="popup-text" class="eu-cookie-compliance-message">
        <p>{{complianceText}}</p>
      </div>
      {{/if}}
      {{#if buttons}} 
      <div id="popup-buttons" class="eu-cookie-compliance-buttons">
        {{#each buttons}}
        <button type="button" class="{{button.class}}">{{button.title}}</button>
        {{/each}}
      </div>
      {{/if}}
    </div>
  </div>
</div>

